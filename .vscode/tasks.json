{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe arquivo de build ativo",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++17",
                "-I",
                "${workspaceFolder}/includes/",
                "-L",
                "${workspaceFolder}/lib/",
                "${workspaceFolder}/src/*.cpp",
                "-O3",
                "-Wall",
                "-Wno-missing-braces",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-o",
                "${workspaceFolder}/build/Project.exe",
                //"-Wl,--subsystem,windows" //comment if you want terminal
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarefa gerada pelo Depurador."
        }
    ],
    "version": "2.0.0"
}